<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kevts.washington.edu.quizdroid" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TopicSelection"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TopicOverview"
            android:label="@string/title_activity_topic_overview" >
        </activity>
        <activity
            android:name=".QuestionPage"
            android:label="@string/title_activity_question_page" >
        </activity>
        <activity
            android:name=".AnswerSummary"
            android:label="@string/title_activity_answer_summary" >
        </activity>
        <activity
            android:name=".FragManager"
            android:label="@string/title_activity_fragment_manager" >
        </activity>
    </application>

</manifest>
